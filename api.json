{
    "openapi": "3.0.0",
    "info": {
        "title": "PluginEndpoints",
        "description": "PluginEndpoints",
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:8080/wp-json/wptba/"
        }
    ],
    "paths": {
        "/admin/email-optin": {
            "patch": {
                "summary": "メールのオプトインを更新する",
                "description": "Patch Email Optin.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PatchEmailOptinRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "更新成功"
                    },
                    "404": {
                        "description": "ユーザー情報が存在しない場合"
                    }
                }
            }
        },
        "/admin/pageinfo": {
            "get": {
                "summary": "管理者ページ情報取得",
                "description": "Get Admin Page Info.",
                "responses": {
                    "200": {
                        "description": "取得成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetAdminPageInfoResponse"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/admin/register": {
            "post": {
                "summary": "管理者ページ情報を登録",
                "description": "Post Service Policies.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostRegisterRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "作成成功"
                    }
                }
            }
        },
        "/admin/service-policies": {
            "post": {
                "summary": "サービスとポリシー更新",
                "description": "Post Service Policies.",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/PostServicePoliciesRequest"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "更新成功"
                    }
                }
            }
        },
        "/public/service-policies": {
            "get": {
                "summary": "サービスとポリシー取得",
                "description": "Get Service Policies for shortcode.",
                "responses": {
                    "200": {
                        "description": "取得成功",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/GetPublicServicePoliciesResponse"
                                }
                            }
                        }
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "PatchEmailOptinRequest": {
                "description": "Email Optin Request.",
                "required": [
                    "email_optin"
                ],
                "properties": {
                    "email_optin": {
                        "description": "Email optin.",
                        "type": "boolean"
                    }
                },
                "type": "object"
            },
            "GetAdminPageInfoResponse": {
                "description": "Get Admin Page Info response.",
                "required": [
                    "service_official_policies_uids",
                    "is_new_user",
                    "current_user_email"
                ],
                "properties": {
                    "service_official_policies_uids": {
                        "description": "Service and policies.",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "is_new_user": {
                        "description": "Is new user.",
                        "type": "boolean"
                    },
                    "current_user_email": {
                        "description": "Current user email.",
                        "type": "string"
                    }
                },
                "type": "object"
            },
            "PostRegisterRequest": {
                "description": "Register new user request.",
                "required": [
                    "email",
                    "email_optin"
                ],
                "properties": {
                    "email": {
                        "description": "Email.",
                        "type": "string"
                    },
                    "email_optin": {
                        "description": "Email optin.",
                        "type": "boolean"
                    }
                },
                "type": "object"
            },
            "PostServicePoliciesRequest": {
                "description": "Post service and policies request.",
                "required": [
                    "service_official_policies_uids"
                ],
                "properties": {
                    "service_official_policies_uids": {
                        "description": "Service and policies.",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            },
            "GetPublicServicePoliciesResponse": {
                "description": "Get Service Policies for shortcode.",
                "required": [
                    "service_official_policies_uids"
                ],
                "properties": {
                    "service_official_policies_uids": {
                        "description": "Service and policies.",
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    }
                },
                "type": "object"
            }
        }
    }
}